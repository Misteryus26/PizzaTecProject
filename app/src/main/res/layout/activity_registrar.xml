<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".login.RegistrarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="¡EMPECEMOS!"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres :"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etNombre_Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:inputType="textPersonName"
        android:maxLength="60"
        android:background="@drawable/style_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido :"
        android:textSize="18dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etApellidos_Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu apellido"
        android:inputType="textPersonName"
        android:maxLength="60"
        android:background="@drawable/style_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario :"
        android:textSize="18dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etEmail_Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu correo electrónico"
        android:inputType="textEmailAddress"
        android:maxLength="60"
        android:background="@drawable/style_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña :"
        android:textSize="18dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etContraseña_Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        android:maxLength="20"
        android:background="@drawable/style_border"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrincipal"
        android:background="@drawable/style_border_button"/>

    <LinearLayout
        android:id="@+id/tvYatengoCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta?"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicia Sesión"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/tvPrivacidadReg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Póliticas de privacidad"/>

        <TextView
            android:id="@+id/tvDerechosrEG"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Derechos de desarrollador"
            android:layout_marginLeft="64dp"/>
    </LinearLayout>

  </LinearLayout>