<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent2"
    tools:context=".dialogos.ConsultaEnvioActivity">

    <ImageButton
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/transparent"
        app:tint="@color/white"
        tools:srcCompat="@drawable/ic_cancelar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="¿QUE MODALIDAD DE ENVÍO DESEAS?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="386dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/style_border"
        android:padding="0dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_delivery" />

    <ImageButton
        android:id="@+id/btnRecoger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDelivery"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="-173dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/style_border"
        android:padding="0dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_recoger" />

</RelativeLayout>