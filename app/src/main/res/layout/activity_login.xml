<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".login.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:src="@drawable/ic_pizza_tec"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario :"
        android:textSize="18dp"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu correo electrónico"
        android:inputType="textEmailAddress"
        android:background="@drawable/style_border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña :"
        android:textSize="18dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword"
        android:background="@drawable/style_border"/>

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESAR"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrincipal"
        android:background="@drawable/style_border_button"/>

    <LinearLayout
        android:id="@+id/tvNotengoCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Aún no tienes una cuenta?"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrate"
            android:gravity="center"
            android:textSize="19dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvRecuperar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:textSize="16dp"
        android:text="¿Olvidaste tu contraseña?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrivacidad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Póliticas de privacidad"/>

        <TextView
            android:id="@+id/tvDerechos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Derechos de desarrollador"
            android:layout_marginLeft="64dp"/>

    </LinearLayout>

</LinearLayout>
    