<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.perfil.PerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Perfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mi Perfil"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPerfil"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/blackweek"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#404040"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/apeUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#404040"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/correoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#404040"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:background="@drawable/style_border"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnMisDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/datos"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Mis Datos"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="200dp"
                android:backgroundTint="@color/coloNegro_Pri"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMisDirecciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/direccionusuario"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Mis Direcciones"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="156dp"
                android:backgroundTint="@color/coloNegro_Pri"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMisTarjetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tarjetabancaria"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Mis Tarjetas"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="183dp"
                android:backgroundTint="@color/coloNegro_Pri"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMisCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/miscompras"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Mis Compras"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="176dp"
                android:backgroundTint="@color/coloNegro_Pri"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMisCupones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cupones"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="MisCupones"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="182dp"
                android:backgroundTint="@color/coloNegro_Pri"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPoliticasPrivacidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/privacidad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Políticas de Privacidad"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="108dp"
                android:backgroundTint="@color/coloNegro_Pri"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDerechosDesarrollador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ddesarrollador"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Derechos de Desarrolador"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_flechaderecha"
                android:layout_gravity="center"
                android:layout_marginLeft="86dp"
                android:backgroundTint="@color/coloNegro_Pri"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_border_button"
        android:backgroundTint="@color/colorPrincipal"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="CERRAR SESIÓN"
        android:textColor="@color/white" />

</LinearLayout>